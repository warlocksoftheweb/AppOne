<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @event.title %>
</p>

<p>
  <b>Date:</b>
  <%= @event.date %>
</p>

<p>
  <b>Description:</b>
  <%= @event.description %>
</p>


<% if user_signed_in? %>
<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Add a guest', new_guest_path(event_id: @event) %>
<% end %>
